<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:backgroundTint="@color/light_blue_50"
    android:clickable="false"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Home_assignment_widgets.AppWidgetContainer">

    <Button
        android:id="@+id/imageCryptoBtn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="313dp"
        android:background="#3B85DF"
        android:text="Rates"
        app:icon="@mipmap/ic_launcher_foreground"
        app:iconPadding="2dp" />

    <TextView
        android:id="@+id/textViewBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="12dp"
        android:text="Bitcoin"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewCro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="72dp"
        android:text="CRO"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtWidgetCro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="69dp"
        android:text="0"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtWidgetEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="40dp"
        android:text="0"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtWidgetBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="14dp"
        android:text="0"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="42dp"
        android:text="Etherium"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>