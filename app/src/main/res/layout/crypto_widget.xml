<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_200"
    android:backgroundTint="@color/light_blue_200"
    android:clickable="false"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Home_assignment_widgets.AppWidgetContainer">

    <Button
        android:id="@+id/imageCryptoBtn"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="#3B85DF"
        android:text="Rates"
        android:visibility="visible"
        app:iconPadding="2dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtWidgetCro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="140dp"
        android:text="0"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtWidgetEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="118dp"
        android:text="0"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtWidgetCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="66dp"
        android:text="Name"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtWidgetBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="90dp"
        android:text="0"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewEth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="117dp"
        android:text="Etherium"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textWidgetCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="68dp"
        android:text="Country"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="89dp"
        android:text="Bitcoin"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewCro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:text="CRO"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>